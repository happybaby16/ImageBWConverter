<Window x:Class="ImageBWConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageBWConverter"
        mc:Ignorable="d"
        Title="Конвертер в черно-белое" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel 
            Grid.ColumnSpan="2"
            >

            <Button 
                Content="Загрузить изображение"
                />

            <Button 
                Content="Сохранить изображение"
                DockPanel.Dock="Right"
                />

            <Button 
                Content="В черно-белое"
                />
        </DockPanel>

        <Image 
            Grid.Row="1"
            Grid.Column="0"
            />

        <Image 
            Grid.Row="1"
            Grid.Column="1"
            />
    </Grid>
</Window>
